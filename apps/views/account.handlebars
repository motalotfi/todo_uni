<main class="ttr-wrapper">
  <div class="container-fluid">
    <div class="db-breadcrumb">
      <h4 class="breadcrumb-title">پروفایل کاربر</h4>
      <ul class="db-breadcrumb-list">
        <li>
          <a href="/admin/dashboard"><i class="fa fa-home"></i>خانه</a>
        </li>
        <li>پروفایل کاربر</li>
        
      </ul>
    </div>
    
      <!-- Your Profile Views Chart -->
      <div class="col-lg-12 m-b30">
        <div class="widget-box">
          <div class="wc-title">
            <h4>لیست کار ها</h4>
          </div>
        </div>
      </div>
    
      <!-- Your Profile Views Chart END-->
   <div class="container-fluid">  
     
      <div class="mt-3 mb-3">
        <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#addWorkModal"
    >افزودن</button>

    <div
      class="modal fade"
      id="addWorkModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">   افزودن کار جدید    </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
            </button>
          </div>
          <div class="modal-body">
            <form method="POST" action="/admin/add">
              <div class="form-group">
                <label for="addWorkInput" class="col-form-label">عنوان</label>
                <input
                  name="workTitle"
                  type="text"
                  class="form-control"
                  id="addWorkInput"
                />
              </div>
              <div class="form-group">
                <input type="checkbox" name="priority" id="priority">
                <label for="priority">اولویت</label>
              </div>

            <input type="submit" value="افزودن" class="btn">
            </form>
          </div>
          
          
        </div>
      </div>
    </div>
    </div> 

</div>


      <div class="lesson-table widget-box  m-t10" style="overflow-x: scroll;">
        <table class="table table-hover table-bordered text-center table-responsive-sm">
  <thead>
    <tr>
      <th scope="col">عنوان</th>
      <th scope="col">تاریخ ثبت</th>
      <th scope="col">وضعیت</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    
    <tr>
      
      <td>{{this.title}}</td>
      <td>{{this.jalali}}</td/>
      <td>{{this.status}}</td>
      
      
      <td>
        <div >
        <a href="/done/{{this.id}}"><button class="btn">انجام شده</button></a>
        <a href="/delete/{{this.id}}"><button class="btn">حذف</button></a>
      </div>
      </td>
    </tr>
    {{/each}}
   
    
  </tbody>
</table>
       
      </div>
    </div>
  </div>
</main>